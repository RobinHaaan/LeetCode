class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        if(strs.size() == 0)
        {
            return "";
        }
        
        string res;
        
        int min_len = strs[0].size();
        for(int i = 1; i < strs.size(); i++)
        {
            if(strs[i].size() < min_len)
            {
                min_len = strs[i].size();
            }
        }
        
        for(int j = 0; j < min_len; j++)
        {
            int flag = 0;
            for(int k = 0; k < strs.size()-1; k++)
            {
                if(strs[k][j] != strs[k+1][j])
                {
                    flag = 1;
                }
            }
            if(0 == flag)
            {
                res += strs[0][j];
            }
            else
            {
                break;
            }
        }
        return res;
    }
};
