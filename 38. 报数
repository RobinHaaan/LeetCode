class Solution {
public:
    string countAndSay(int n) {
        if(1 == n)
            return "1";
        string str1 = countAndSay(n - 1);
        
        int count = 1;
        string str2;
        for(int i = 0; i < str1.size(); i++)
        {
            if(str1[i] == str1[i+1])
            {
                count++;
            }
            else
            {
                str2 += to_string(count) + str1[i];
                count = 1;
            }
        }
        
        return str2;
    }
};
